defutf8 on
defencoding utf8
encoding utf8 utf8

autodetach on
startup_message off
vbell off
defscrollback 10000
silencewait 15
termcapinfo xterm* ti@:te@
altscreen off
defnonblock 5
crlf off
hardcopy_append on

escape ^Tt

markkeys "h=^B:l=^F:$=^E"

activity "activity in %n (%t) [%w:%s]~"
bell "bell in %n (%t) [%w:%s]~"

bind ^Q mapdefault
bind q mapdefault
bind k
bind ^k
bind .
bind ^\
bind \\
bind ^h
bind h
bind ''
bind 'L'
bind '}' history
bind ^a

bindkey "Oc" next
bindkey "Od" prev

bind 'u' prev
bind ^U prev
bind 'j' next
bind ^J next

bind ^P focus up
bind 'p' focus up
bind ^N focus down
bind 'n' focus down
bind ^F focus top
bind 'f' focus top
bind ^B focus bottom
bind 'b' focus bottom

bind = resize =
bind + resize +1
bind - resize -1
bind _ resize max

bind x remove
bind X lockscreen

bind r eval "echo 'Reloading .screenrc'" "source $HOME/.screenrc" "echo 'Done.'"

bind , title
bind A title

bind s eval "split" "focus down" "next"
bind S eval "split -v" "focus right" "next"

sorendition "+b kG"

hardstatus alwayslastline "%{= gk}%H %-Lw%{= Gk}%50>%n%f* %t%{-}%{= gk}%+Lw%<"

defbce on
term screen-256color
terminfo rxvt-unicode 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'

bind c screen 1
bind ^c screen 1
bind 0 select 10

screen -t shell 1
screen -t bash 2
select 1

deflogin off
shell -$SHELL

multiuser off

msgwait 2
msgminwait 1

defwrap on
defflow off

defmonitor on
monitor on

rendition so "= dd"

bind P paste .
bind p paste .

bind ^] paste [.]

bind b eval "writebuf" "exec sh -c 'xsel -i -b < /tmp/screen-exchange'"
bind y eval "exec sh -c 'xsel -o -b > /tmp/screen-exchange'" "readbuf" "paste ."

zombie kr

blankerprg ""
idle 0